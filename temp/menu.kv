#:kivy 2.3.1


<TitleScreen>:
    Label:
        id: title_label
        size: self.texture_size
        text_size: root.width, root.height * 0.75
        color: "420b10"
        markup: True
        bold: True
        text: "THE GRID"
        font_size: "120sp"
        font_family: "Jetbrains Mono"
        halign: "center"
        valign: "top"

    Button:
        id: btnStart
        pos_hint: {"x": 0.5 - self.size_hint_x / 2, "y": 0.4}
        size_hint_x: 0.2
        size_hint_y: 0.075
        font_size: "45sp"
        background_color: [0,0,0,0]
        color: "420b10"
        text: "start"
        on_release: root.manager.current = "game"

    Button:
        id: btnLoad
        pos_hint: {"x": 0.5 - self.size_hint_x / 2, "y": 0.3}
        size_hint_x: 0.18
        size_hint_y: 0.070
        font_size: "40sp"
        background_color: [0,0,0,0]
        color: "420b10"
        text: "load"
        on_release: root.manager.current = "load"

    Button:
        id: btnOptions
        pos_hint: {"x": 0.5 - self.size_hint_x / 2, "y": 0.2}
        size_hint_x: 0.16
        size_hint_y: 0.065
        font_size: "30sp"
        background_color: [0,0,0,0]
        color: "420b10"
        text: "options"
        on_release: root.manager.current = "options"

    Button:
        id: btnExit
        pos_hint: {"x": 0.5 - self.size_hint_x / 2, "y": 0.1}
        size_hint_x: 0.14
        size_hint_y: 0.060
        font_size: "20sp"
        background_color: [5,0,0,0]
        color: "420b10"
        text: "exit"
        on_release: app.stop()


<SaveScreen>:
    Label:
        id: save_label
        size: self.texture_size
        text_size: root.width, root.height * 0.9
        color: "420b10"
        markup: True
        bold: True
        text: "save states here"
        font_size: "50sp"
        font_family: "Jetbrains Mono"
        halign: "center"
        valign: "top"
    Button:
        id: btnBack
        pos_hint: {"x": 0.5 - self.size_hint_x / 2, "y": 0.1}
        size_hint_x: 0.14
        size_hint_y: 0.060
        font_size: "20sp"
        background_color: [0,0,0,0]
        color: "420b10"
        text: "back"
        on_release: root.manager.current = "title"


<OptionsScreen>:
    Label:
        id: load_label
        size: self.texture_size
        text_size: root.width, root.height * 0.9
        color: "420b10"
        markup: True
        bold: True
        text: "options menu here"
        font_size: "50sp"
        font_family: "Jetbrains Mono"
        halign: "center"
        valign: "top"

    Button:
        id: btnBack
        pos_hint: {"x": 0.5 - self.size_hint_x / 2, "y": 0.1}
        size_hint_x: 0.14
        size_hint_y: 0.060
        font_size: "20sp"
        background_color: [0,0,0,0]
        color: "420b10"
        text: "back"
        on_release: root.manager.current = "title"


<GameScreen>:
    Label:
        id: game_label
        size: self.texture_size
        text_size: root.width, root.height * 0.9
        color: "420b10"
        markup: True
        bold: True
        text: "very gameplay, much fun"
        font_size: "50sp"
        font_family: "Jetbrains Mono"
        halign: "center"
        valign: "top"

    Button:
        id: btnBack
        pos_hint: {"x": 0.5 - self.size_hint_x / 2, "y": 0.1}
        size_hint_x: 0.14
        size_hint_y: 0.060
        font_size: "20sp"
        background_color: [0,0,0,0]
        color: "420b10"
        text: "back"
        on_release: root.manager.current = "title"

<Manager>:
    id: screen_manager
    TitleScreen:
        id: title_screen
        name: "title"
        manager: screen_manager

    SaveScreen:
        id: save_screen
        name: "load"
        manager: screen_manager

    OptionsScreen:
        id: options_screen
        name: "options"
        manager: screen_manager

    GameScreen:
        id: game_screen
        name: "game"
        manager: screen_manager

