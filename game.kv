#:kivy 2.3.1

<Manager>:
    id: screen_manager
    TitleScreen:
    SaveScreen:
    OptionsScreen:
    GameScreen:


<TitleScreen>:
    id: title_screen
    name: "title"
    FitImage:
        id: title_image
        source: "assets/img/placeholder.png"
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(5)
        padding: dp(5)
        MDRoundFlatIconButton:
            id: start_button
            text: "start"
            icon: "play"
            line_color: [0,0,0,0]
            font_style: "H4"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_release:
                app.stop_music()
                app.root.current = "game"
        MDRoundFlatIconButton:
            id: load_button
            text: "load"
            icon: "content-save"
            line_color: [0,0,0,0]
            font_style: "H5"
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = "load"
        MDRoundFlatIconButton:
            id: options_button
            text: "options"
            icon: "cog"
            line_color: [0,0,0,0]
            font_size: "20sp"
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = "options"
        MDRoundFlatIconButton:
            id: exit_button
            text: "exit"
            icon: "location-exit"
            line_color: [0,0,0,0]
            font_size: "20sp"
            pos_hint: {"center_x": 0.5}
            on_release: app.stop()


<SaveScreen>:
    id: save_screen
    name: "load"
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        padding: dp(25)
        MDLabel:
            id: save_label
            text: "Save states here"
            font_style: "H2"
            halign: "center"
    MDRoundFlatIconButton:
        id: back_button
        text: "back"
        icon: "undo"
        line_color: [0,0,0,0]
        font_size: "20sp"
        pos_hint: {"center_x": 0.5}
        on_release: app.root.current = "title"


<OptionsScreen>:
    id: options_screen
    name: "options"
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(5)
        padding: dp(25)
        MDLabel:
            id: options_label
            text: "Options menu here"
            font_style: "H2"
            halign: "center"
    MDRoundFlatIconButton:
        id: back_button
        text: "back"
        icon: "undo"
        line_color: [0,0,0,0]
        font_size: "20sp"
        pos_hint: {"center_x": 0.5}
        on_release: app.root.current = "title"


<GameScreen>:
    id: game_screen
    name: "game"
    MDBoxLayout:
        id: game_container
        padding: dp(20)
        line_color: [0,0,0,0]
    MDRoundFlatIconButton:
        id: back_button
        text: "back"
        icon: "undo"
        line_color: [0,0,0,0]
        font_size: "20sp"
        pos_hint: {"center_x": 0.5}
        on_release:
            app.play_music()
            app.root.current = "title"

